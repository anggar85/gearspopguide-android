                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:padding="5dp"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:layout_width="0dp">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:text="Collect AFK Campaign Loot Two Times" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:padding="5dp"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:layout_width="0dp">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:text="Level Up Any Hero Once" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:padding="5dp"
                        android:textAlignment="center" />
